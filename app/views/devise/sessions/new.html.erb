<div class="log-in-style">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" }, placeholder: 'Enter your email', label: false %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" }, placeholder: 'Enter your password', label: false %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class:"log-in-button" %>
    </div>
  <% end %>
  
    <%= render "devise/shared/links" %>

</div>


