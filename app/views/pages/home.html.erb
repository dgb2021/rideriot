<!-- grayscale path: "rideriot/splash_gray_swvllz.png" -->
<!-- 2 tone path: "rideriot/splashv1_lxvhfu.png" -->
<div id="home-background" style="background-image: url(<%= cl_image_path "rideriot/splash_gray_pcsm9x.png"%>);">
  <div id="home-title">
    <h1 id="ride">ride</h1>
    <h1 id="riot">riot</h1>
  </div>
  <div id="home-blurb">
    <p>Try new cycle routes</p>
    <p>Earn achievements</p>
    <p>Compete with friends</p>
  </div>
  <div id="home-search-form" class="p-3">
    <%= simple_form_for :address_form, method: :get, url: cycle_routes_path do |f| %>
      <%= f.input :address, label: false, placeholder: "Enter Starting Address" %>
      <div class="d-flex">
        <%= f.input @tags[0].name, as: :boolean, input_html: { class: "tag-selector green-pill" },
                item_wrapper_class: 'tag-item' %>
        <%= f.input @tags[1].name, as: :boolean, input_html: { class: "tag-selector blue-pill" },
                item_wrapper_class: 'tag-item' %>
      </div>
      <div class="d-flex">
        <%= f.input @tags[2].name, as: :boolean, input_html: { class: "tag-selector orange-pill" },
                item_wrapper_class: 'tag-item' %>
        <%= f.input @tags[3].name, as: :boolean, input_html: { class: "tag-selector red-pill" },
              item_wrapper_class: 'tag-item' %>
      </div>
        <%= f.submit "Find Nearby Routes", class: "btn btn-primary w-100 mt-3" %>
    <% end %>
  </div>
</div>
