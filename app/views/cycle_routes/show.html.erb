<div class="container">
  <div class="cards" style="text-align: center;">
    <div class="show-photo d-flex align-items-center justify-content-center" style='background-image: url("http://res.cloudinary.com/duae8ljpg/image/upload/v1/<%= @cycle_route.map_image %>"); height: 200px; background-size: cover;'>
      <div class="name-banner">
        <h2 class="m-0 p-2"> <%= @cycle_route.name %> </h2>
      </div>
    </div>
      <div class="d-flex justify-content-between p-3">
        <div class="col-xs-8">
          <h5 class="mb-0">Distance: <%= @cycle_route.total_distance %> km</h5>
        </div>
        <div class="col-xs-4">
          <% if @reviews.present? %>
            <div id="rating-container">
              <div class="row">
                <div class="col">
                  <% @rating.times do |f| %>
                    <%= image_tag "star.png", class: "star-sml" %>
                  <% end %>
                  <% @blank_stars.times do |f| %>
                    <%= image_tag "blank-star.png", class: "star-sml" %>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>

    <!-- TODO - add tags in pill form, make our reddish color -->
    <div class="container">
      <p><%= @cycle_route.description %></p>
    </div>
    <div class="container">
      <div class="row justify-content-center mb-3">
        <%= link_to "Start Route", cycle_route_attempts_path(@cycle_route), method: :post, class: 'btn btn-primary mr-2 cust-width' %>

        <%= link_to "Back", cycle_routes_path(address_form:{address: params.dig(:address_form,:address)}), class: 'btn btn-outline-primary ml-2 cust-width' %>
        <% raise %>
      </div>
    </div>
  </div>

  <% if @reviews.present? %>
    <div class="cards">
      <h4 class="reviews-header mt-2">Reviews</h4>
      <% @reviews.each do |review| %>
        <p class="d-flex justify-content-start px-3 mb-0"><strong><%= review.user.name %> says:</strong></p>
        <div class="d-flex justify-content-between px-2">
          <div class="col-xs-8">
            <p class="text-left pl-2">"<%= review.comment %>"</p>
          </div>
          <div class="col-xs-4" style="width: 190px">
              <% review.rating.times do |f| %>
                <%= image_tag "star.png", class: "star-sml" %>
              <% end %>
              <% @num = 5 - review.rating %>
              <% @num.times do |f| %>
                <%= image_tag "blank-star.png", class: "star-sml" %>
              <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
